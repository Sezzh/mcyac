.navigation
    width 100%
    &__list
        padding 0
        margin 0
        list-style-type none
        &__item
            background-size cover
            padding 6.25vh 10%
            box-sizing border-box
            border-top 1px solid borderColorYellow
            position relative
            z-index 1
            &:last-child
                border-bottom 1px solid borderColorYellow
            &:nth-child(even)
                text-align right
            &:before
                background-color rgba(2,2,2,.3)
                content ""
                display block
                position absolute
                top 0
                left 0
                width 100%
                height 100%
            &__link
                text-decoration none
                z-index 2
                font-size 2rem
                color brightFontColor
                position relative
